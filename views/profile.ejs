  <title>Profile</title>
</head>

<body id="app" class="profile_body">
  <div class="profile_header">
    <div class="welcome-line">
      <i>Hello <span id="username"></span></i>
    </div>
    <div class="setting_btn_ctn">
      <button class="setting_btn" data-toggle="modal" data-target="#settings">
        Settings
      </button>
        <button class="setting_btn" onclick="userLogout();">
          Log out
        </button>

    </div>
  </div>

  <div class="profile_main">
    <div class="profile_schedule_ctn">
      <div class="profile_schedule">
        <div class="day">
          <div class="day_title">Today</div>
          <div class="day_event_all">
            <div class="day_event">
              <div class="day_event_name">Web Project Meeting</div>
              <div class="day_event_time">10:00-11:00</div>
            </div>
            <div class="day_event">
              <div class="day_event_name">Research Meeting</div>
              <div class="day_event_time">15:00-16:00</div>
            </div>
          </div>
        </div>

        <div class="day">
          <div class="day_title">26 May</div>
          <div class="day_event_all">
            <div class="day_event">
              <div class="day_event_name">Dinner Meeting</div>
              <div class="day_event_time">17:00-19:00</div>
            </div>
          </div>
        </div>

      </div>
    </div>
    <div class="profile_btn_ctn">
      <form action="/users/calendar" method="post">
        <button class="custom-btn btn-7"><span>HOST YOUR EVENT</span></button>
      </form>
      <form action="/users/pending-events" method="get">
        <button class="custom-btn btn-7"><span>PENDING EVENTS</span></button>
      </form>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="settings" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Setting</h5>
        </div>
        <div class="modal-body modal-body-custom">
          <button class="modal-btn-custom" data-toggle="modal" data-target="#updateEmail" data-dismiss="modal" onclick="getEmail();">Update Email</button>
          <button class="modal-btn-custom" data-toggle="modal" data-target="#updatePassword" data-dismiss="modal">Update Password</button>
          <form action="/users/noti_preferences" method="get">
            <button class="modal-btn-custom"><span>Email Preferences</span></button>
          </form>

        </div>
        <div class="modal-footer modal-footer-custom">
          <button type="button" class="btn close-modal-btn-custom" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="updatePassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Update Password</h5>
        </div>
        <div class="modal-body modal-body-custom">
          <form id="inputs" class="needs-validation" novalidate="">
            <div class="form-group mx-2 mb-3">
                <label for="newPassword">New Password</label>
                <input type="text" class="form-control" id="newPassword" placeholder="New password" required="">
            </div>
        </form>
        </div>
        <div class="modal-footer modal-footer-custom">
          <button type="button" class="btn close-modal-btn-custom" data-toggle="modal" data-target="#settings" data-dismiss="modal">Back</button>
          <button type="button" class="btn close-modal-btn-custom" data-toggle="modal" data-target="#settings" data-dismiss="modal" onclick="updatePassword();">Submit</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="updateEmail" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Update Email</h5>
        </div>
        <div class="modal-body modal-body-custom">
          <form id="inputs" class="needs-validation" novalidate="">
            <div class="form-group mx-2 mb-3">
              <label for="newEmail">Current email</label>
              <input type="text" class="form-control" id="currentEmail" readonly>
            </div>
            <div class="form-group mx-2">
                <label for="newEmail">New email</label>
                <input type="text" class="form-control" id="newEmail" placeholder="New email" required="">
            </div>
        </form>
        </div>
        <div class="modal-footer modal-footer-custom">
          <button type="button" class="btn close-modal-btn-custom" data-toggle="modal" data-target="#settings" data-dismiss="modal">Back</button>
          <button type="button" class="btn close-modal-btn-custom" data-toggle="modal" data-target="#settings" data-dismiss="modal" onclick="updateEmail();">Submit</button>
        </div>
      </div>
    </div>
  </div>
  <script src="/javascripts/profile.js"></script>
  <script>
    var calender_events;
    $(document).ready(function (){
      // GET username
      var xhttp = new XMLHttpRequest();

      xhttp.onreadystatechange = function () {
        if (this.readyState == 4 && this.status == 200) {
          document.getElementById("username").innerHTML = this.responseText;
        }
      }

      xhttp.open("GET", "/users/getUsername", true);
      xhttp.send();

      // POST get user finalized events for calender

      var xhttp = new XMLHttpRequest();

      xhttp.onreadystatechange = function () {
        if (this.readyState == 4 && this.status == 200) {
          console.log(JSON.parse(this.responseText)[0])
          calendar_events = JSON.parse(this.responseText)[0];
          var calendar_div = document.getElementsByClassName("profile_schedule")[0];
          calendar_list = {}
          for (let calendar of calendar_events) {
            let day = calendar["date"].substring(5,7) + "-" + calendar["date"].substring(8,10);
            console.log(day)
            if (day in calendar) {
              calendar_list[day].push(calendar["event_name"]);
            }
            else {
              calendar_list[day] = [{name: calendar["event_name"], from: '10:00', duration: calendar["duration"]}];
            }
          }

          for (let day in calendar_list) {
            let day_div = document.createElement('div');
            let day_title = document.createElement('div');
            day_title.innerText = day;
            day_div.appendChild(day_title);
            let day_event_all = document.createElement('div');
            for (let i = 0; i < calendar_list[day].length; i++) {
              let day_event = document.createElement('div');
              let day_event_name = document.createElement('div');
              day_event_name.innerText = calendar_list[day][i]["name"];
              let hour = Math.floor(calendar_list[day][i]["duration"]/60);
              let minute = calendar_list[day][i]["duration"]%60;
              let hour_from_time = parseInt(calendar_list[day][i]["from"].substring(0,2));
              let minute_from_time = parseInt(calendar_list[day][i]["from"].substring(3,5));
              let end_hour = hour+hour_from_time;
              let end_minute = minute+minute_from_time;
              if (end_minute%60 != 0) {
                
              }
              console.log(end_hour,end_minute)


            }
          }

        }
      }

      xhttp.open("POST", "/users/getEventCalender", true);
      xhttp.send();
    })
  </script>
</body>

</html>